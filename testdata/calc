[UINT c = 0, UINT d = 0] FUNCTION swap(UINT a = 0, UINT b = 0){
c = b
d = a
}

[UINT a1 = -1, UINT a2 = -1, UINT a3 = -1] FUNCTION gnome_sort(a = [0, 0, 0], UINT dir = 0) {
    UINT pos = 0
    WHILE(pos LT (SIZE1 a)) DO {
        IF((pos EQ 0) OR (a(pos) GT a(pos-1)) OR (a(pos) EQ a(pos-1))){
            INC pos
        } ELSE {
          [a(pos), a(pos-1)] = swap(a(pos), a(pos-1))
          DEC pos
        }
    }

    a1 = a(0)
    a2 = a(1)
    a3 = a(2)
}

1DARRAYOFUINT a = [1, 7, 2, 4, 0]
UINT a1 = -2
UINT a2 = -2
UINT a3 = -2
[a1, a2, a3] = gnome_sort(a,)